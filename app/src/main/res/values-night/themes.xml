<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- Style Text view   -->
    ---------------------- Text Tiny -------------------------
    <style name="TextTiny" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextTinyWhite" parent="TextTiny">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextTinyBoldWhite" parent="TextTinyWhite">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTinyBold" parent="TextTiny">
        <item name="android:textStyle">bold</item>
    </style>


    ---------------------- Text Small -------------------------
    <style name="TextSmall" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextSmallWhite" parent="TextSmall">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextSmallBoldWhite" parent="TextSmallWhite">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSmallBold" parent="TextSmall">
        <item name="android:textStyle">bold</item>
    </style>



    ---------------------- Text Normal -------------------------
    <style name="TextNormal" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextNormalWhite" parent="TextNormal">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextNormalBoldWhite" parent="TextNormalWhite">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextNormalBold" parent="TextNormal">
        <item name="android:textStyle">bold</item>
    </style>

    <!--style bottom sheet-->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">1000dp</item>

    </style>


    ---------------------- Text Large -------------------------
    <style name="TextLarge" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextLargeWhite" parent="TextLarge">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextLargeBoldWhite" parent="TextLargeWhite">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLargeBold" parent="TextLarge">
        <item name="android:textStyle">bold</item>
    </style>


    ---------------------- Text XLarge -------------------------
    <style name="TextXLarge" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextXLargeWhite" parent="TextXLarge">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextXLargeBoldWhite" parent="TextXLargeWhite">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextXLargeBold" parent="TextLarge">
        <item name="android:textStyle">bold</item>
    </style>

</resources>