<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    ----------------------------------------------------------------
    <!-- Style Text view   -->
    ---------------------- Text Tiny -------------------------
    <style name="TextTiny" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextTinyWhite" parent="TextTiny">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextTinyBoldWhite" parent="TextTinyWhite">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTinyBold" parent="TextTiny">
        <item name="android:textStyle">bold</item>
    </style>


